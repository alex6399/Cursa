@model IEnumerable<Cursa.ViewModels.ProjectVM.ProjectViewModel>

@{
    ViewData["Title"] = "Проекты";
}

<h4>@ViewData["Title"]</h4>

<p>
    <a asp-controller="Projects" asp-action="Create">Создать</a>
</p>
<link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<table id="projectDatatable" class="table">
    <thead>
        <tr>
            <th>
                 @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                 @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th></th>
        </tr>
    </thead>
</table>
@section Scripts
{
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/projectDatatable.js"></script>
}