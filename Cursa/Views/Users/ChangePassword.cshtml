@model Cursa.ViewModels.AccountVM.ChangePasswordViewModel
@{
    ViewBag.Title = "Изменение пароля";
}
<h4>Изменение пароля для пользователя: @Model.FullName</h4>

<div class="row">
    
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="col-md-4">
        <form asp-action="ChangePassword" asp-controller="Users">
            <input type="hidden" asp-for="Id"/>
            <input type="hidden" asp-for="FullName"/>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                <input asp-for="NewPassword" class="form-control"/>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-sm btn-primary"/>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Назад к списку пользователей</a>
</div>