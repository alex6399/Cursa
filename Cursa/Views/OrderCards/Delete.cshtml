            @Html.DisplayNameFor(model => model.ModifiedUser)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModifiedUser.Id)
        </dd >
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="Удалить" class="btn btn-danger"/> |
        <a asp-controller="OrderCards" asp-action="GetOrderCardsForProduct" asp-route-productId="@Model.ProductId">Назад</a>
    </form>
</div>