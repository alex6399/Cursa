@model DataLayer.Entities.Module

@{
    ViewData["Title"] = "Delete";
}

@{
    ViewData["Title"] = "Удаление карты заказа";
}

<h4>@ViewData["Title"]</h4>

<h6 style="color:red">Подтвердите удаление</h6>
<div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ModuleType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModuleType.Code)
        </dd >
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DestinationOrderCard)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DestinationOrderCard.Name)
        </dd >
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SerialNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SerialNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Place)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Place)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirmwareVersion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirmwareVersion)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.GetFullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActualOrderCard)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActualOrderCard.Name)
        </dd >
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ManufacturingData)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ManufacturingData)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ModifiedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModifiedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedUser)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedUser.GetFullName)
        </dd >
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ModifiedUser)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModifiedUser.GetFullName)
        </dd >
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="Удалить" class="btn btn-danger"/> |
        <a asp-action="GetModulesForCardOrder" asp-route-cardOrderId="@Model.DestinationOrderCardId">Назад</a>
    </form>
</div>