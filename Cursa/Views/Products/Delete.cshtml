@model DataLayer.Entities.Product

@{
    ViewData["Title"] = "Удаление проекта";
}

<h4>@ViewData["Title"]</h4>

<h6 style="color:red">Подтвердите удаление</h6>
<div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SerialNum)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SerialNum)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CertifiedNum)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CertifiedNum)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductType.Name)
        </dd >
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SubProject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubProject.Code)
        </dd >
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsFormed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsFormed)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ManufacturingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ManufacturingDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShippedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShippedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ModifiedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModifiedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedUser)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedUser.Id)
        </dd >
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ModifiedUser)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModifiedUser.Id)
        </dd >
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="Удалить" class="btn btn-danger"/> |
        <a asp-action="GetProductsForSubProject" asp-route-subProjectId="@Model.SubProjectId">К списку продукции</a>
    </form>
</div>