@model DataLayer.Entities.ModuleType

@{
    ViewData["Title"] = "Редактирование типа модуля";
}

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountChanel" class="control-label"></label>
                <input asp-for="CountChanel" class="form-control" />
                <span asp-validation-for="CountChanel" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActiv" /> @Html.DisplayNameFor(model => model.IsActiv)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsCommunicationDevice" /> @Html.DisplayNameFor(model => model.IsCommunicationDevice)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="NumberConnectionPoints" class="control-label"></label>
                <input asp-for="NumberConnectionPoints" class="form-control" />
                <span asp-validation-for="NumberConnectionPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
   <a asp-action="Index">К списку типов модулей</a>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
